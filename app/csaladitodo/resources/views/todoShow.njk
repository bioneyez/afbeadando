{% extends "layout" %}

{% block content %}
<h2>{{ todo.name }}</h2>
<p>{{ todo.category.name }}</p>
<h3>Leírás</h3>
<pre>
{{ todo.instructions }}
</pre>

{% if (todo.user_id == currentUser.id) %}
<a href="/todos/{{ todo.id }}/edit" class="btn btn-default">
    Szerkeszt
</a>
<a href="/todos/{{ todo.id }}/delete" class="btn btn-danger">
    Töröl
</a>
{% endif %}

{% endblock %}